@using NTierApp.BLL.Models;
@{string action = ViewBag.Action;}
@model EmployeeModel

@using (Html.BeginForm(action, "Employee", FormMethod.Post))
{

    <table>
        @Html.HiddenFor(p => p.Id)
        <tr>
            <td>@Html.LabelFor(p => p.FirstName)</td>
            <td>@Html.TextBoxFor(p => p.FirstName)</td>
            <td>@Html.LabelFor(p => p.LastName)</td>
            <td>@Html.TextBoxFor(p => p.LastName)</td>
            <td>@Html.LabelFor(p => p.Age)</td>
            <td>@Html.EditorFor(p => p.Age)</td>
        </tr>


    </table>
    <button>Submit</button>
}